<style>
table, th, td {
    /* border: 1px solid black; */
    border-collapse: collapse;
}
th, td {
    padding: 15px;
}

span#shopping-cart-size{
  font-size: 20px;
  padding-top: 12px;
}

a#box-back{
  background-color: "red";
}

span#trash {
  color: grey;
}

i#prod-desc{
  font-size: 12px;
}

table#wishlist-table {
  margin: auto;
}

tr:nth-child(odd) {
  background-color: #dddddd;
}

table#wishlist-table-mobile {
  display: none;
}

