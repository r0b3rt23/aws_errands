</style>
<center>
<fieldset id="password-credentials">
  <div class="form-group">
    <%= f.text_field :first_name, class: 'form-control', placeholder:Spree.t(:first_name), required: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: 'form-control', placeholder:Spree.t(:last_name), required: true %>
  </div>
  <div class="form-group">
      <%= f.date_field :birthday, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' , required: true%>
  </div>
  <div class="form-group">
      <%= f.select(:gender, [["Male", "male"], ["Female", "female"]], {}, {:class=>"form-control"}) %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, :class => 'form-control', :placeholder => Spree.t(:email) %>
  </div>
  <hr />
  <div class="form-group">
    <%= f.password_field :password, :class => 'form-control', :placeholder => Spree.t(:password) %>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => Spree.t(:confirm_password) %>
  </div>
</fieldset>
</center>
<div data-hook="signup_below_password_fields"></div>
